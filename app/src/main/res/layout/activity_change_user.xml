<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        tools:context=".ui.activity.login.ChangeUserActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yunshang.haile_manager_android.ui.view.CommonTitleActionBar
            app:title="@string/change_account"
            android:id="@+id/bar_action_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_action_bar_h" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_account_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp" />

        <LinearLayout
            android:id="@+id/ll_change_user_add"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/shape_sffffff_r8"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <com.yunshang.haile_manager_android.ui.view.CircleImageView
                android:id="@+id/iv_account_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_change_account_add"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="0dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_account_name"
                style="@style/Font_16_333333_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/add_account"
                tools:text="名字名字" />
        </LinearLayout>
    </LinearLayout>
</layout>