<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.shangyun.haile_manager_android.business.vm.DeviceCreateAndUpdateViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.activity.device.DeviceCreateAndUpdateActivity">

        <com.shangyun.haile_manager_android.ui.view.CommonTitleActionBar
            android:id="@+id/bar_device_create_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_action_bar_h"
            android:background="@drawable/shape_bottom_stroke_dividing_efefef"
            app:title="@string/add_device" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_device_info_title"
            style="@style/Font_12_999999"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_bottom_stroke_dividing_efefef_mlr16"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="@string/device_info" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.shangyun.haile_manager_android.ui.view.MultiTypeItemView
                    android:id="@+id/mtiv_device_create_pay_code"
                    style="@style/MultiTypeItemViewStyle"
                    android:drawableEnd="@mipmap/icon_device_scan"
                    app:hint="@string/scan_hint"
                    app:itemContent="@{vm.payCode}"
                    app:title="@string/pay_code"
                    app:titleDrawableEnd="@mipmap/icon_item_required"
                    app:titleDrawablePadding="4dp"
                    app:type="info" />

                <com.shangyun.haile_manager_android.ui.view.MultiTypeItemView
                    android:id="@+id/mtiv_device_create_imei"
                    style="@style/MultiTypeItemViewStyle"
                    android:drawableEnd="@mipmap/icon_device_scan"
                    app:hint="@string/scan_hint"
                    app:itemContent="@{vm.imeiCode}"
                    app:title="@string/imei"
                    app:titleDrawableEnd="@mipmap/icon_item_required"
                    app:titleDrawablePadding="4dp"
                    app:type="info" />

                <com.shangyun.haile_manager_android.ui.view.MultiTypeItemView
                    android:id="@+id/mtiv_device_create_model"
                    style="@style/MultiTypeItemViewStyle"
                    app:itemContent="@{vm.createDeviceModelName}"
                    app:title="@string/device_model"
                    app:type="info" />

                <com.shangyun.haile_manager_android.ui.view.MultiTypeItemView
                    android:id="@+id/mtiv_device_create_name"
                    style="@style/MultiTypeItemViewStyle"
                    app:itemContent="@{vm.createAndUpdateEntity.code}"
                    app:title="@string/device_model"
                    app:type="input" />

                <com.shangyun.haile_manager_android.ui.view.MultiTypeItemView
                    android:id="@+id/mtiv_device_create_department"
                    style="@style/MultiTypeItemViewStyle"
                    app:itemContent="@{vm.createDeviceShop.name}"
                    app:title="@string/department"
                    app:type="info" />

                <com.shangyun.haile_manager_android.ui.view.MultiTypeItemView
                    android:id="@+id/mtiv_device_create_fun_configure"
                    style="@style/MultiTypeItemViewStyle"
                    app:itemContent="@{(null == vm.createDeviceFunConfigure || 0 == vm.createDeviceFunConfigure.size())?@string/no_configure:@string/configured}"
                    app:title="@string/fun_configure"
                    app:type="info" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/include_dividing1" />

        <com.shangyun.haile_manager_android.ui.view.CommonButton
            android:id="@+id/btn_device_create_submit"
            style="@style/CommonMatchBtnStyle1"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="42dp"
            android:onClick="@{vm::submit}"
            android:text="@string/submit" />
    </LinearLayout>
</layout>