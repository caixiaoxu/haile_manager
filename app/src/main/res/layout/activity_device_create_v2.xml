<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:divider="@color/dividing_line_color"
        app:showDividers="middle"
        tools:context=".ui.activity.device.DeviceCreateV2Activity">

        <com.yunshang.haile_manager_android.ui.view.CommonTitleActionBar
            android:id="@+id/bar_device_create_v2_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_action_bar_h"
            android:background="@color/white"
            app:rightModel="area"
            app:title="@string/add_device" />

        <FrameLayout
            android:id="@+id/fl_device_create_parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="96dp">

            <com.yunshang.haile_manager_android.ui.view.CommonButton
                android:id="@+id/btn_device_create_next_or_save"
                style="@style/CommonMatchBtnStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="8dp" />
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>