<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".ui.activity.personal.RechargeSuccessActivity">

        <com.yunshang.haile_manager_android.ui.view.CommonTitleActionBar
            android:id="@+id/bar_recharge_success_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_action_bar_h"
            app:title="@string/result_fellback"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/icon_success_main"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/pay_success"
            style="@style/Font_18_333333"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_recharge_success_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/Font_24_333333"
            tools:text="Â¥ 4.00"
            android:fontFamily="@font/money"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/pay_success_hint"
            style="@style/Font_12_666666"/>

        <com.lsy.framelib.ui.weight.SingleTapButton
            android:id="@+id/btn_recharge_success"
            style="@style/CommonMatchBtnStyle1"
            android:layout_width="220dp"
            android:layout_marginTop="50dp"
            android:text="@string/finish"/>
    </LinearLayout>
</layout>