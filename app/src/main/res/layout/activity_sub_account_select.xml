<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_bg"
        android:orientation="vertical"
        tools:context=".ui.activity.subAccount.SubAccountSelectActivity">

        <com.shangyun.haile_manager_android.ui.view.CommonTitleActionBar
            android:id="@+id/bar_sub_account_account_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_action_bar_h"
            app:rightModel="text"
            app:title="@string/sub_account_account" />

        <com.shangyun.haile_manager_android.ui.view.refresh.CommonRefreshRecyclerView
            android:id="@+id/rv_sub_account_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>