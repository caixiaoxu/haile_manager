<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="name"
            type="java.lang.String" />
    </data>

    <com.yunshang.haile_manager_android.ui.view.CheckBoldRadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_data_statistics_category_day"
        android:button="@null"
        android:minHeight="0dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="@{name}"
        android:textColor="@color/data_statistics_category"
        android:textSize="14sp"
        tools:showIn="@layout/fragment_device_monitoring" />
</layout>