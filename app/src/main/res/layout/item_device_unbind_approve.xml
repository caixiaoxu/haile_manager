<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.yunshang.haile_manager_android.utils.StringUtils" />

        <variable
            name="isBatch"
            type="java.lang.Boolean" />

        <variable
            name="item"
            type="com.yunshang.haile_manager_android.data.entities.DeviceUnbindApproveEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_device_repairs_select"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:background="@color/transparent"
            android:button="@null"
            android:checked="@{item.selected}"
            android:drawableStart="@drawable/selector_checked"
            android:enabled="@{1 == item.status}"
            app:visibility="@{isBatch}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_ffffff_r8"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_device_repairs_device_name"
                    style="@style/font_17_black85_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{item.goodsName}"
                    app:layout_constraintEnd_toStartOf="@id/tv_device_repairs_status"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="1号洗衣房01号洗衣机" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_device_repairs_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/icon_arrow_right"
                    android:drawablePadding="8dp"
                    android:text="@{item.statusVal}"
                    android:textColor="@{item.statusColor}"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_device_repairs_device_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_device_repairs_device_name"
                    tools:text="批准" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_device_repairs_imei"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_order_list_device"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_device_repairs_imei" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_device_repairs_imei"
                    style="@style/Font_14_black65"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:onClick="@{v->StringUtils.copyToShear(item.imei)}"
                    android:text='@{item.imeiVal}'
                    app:layout_constraintStart_toEndOf="@id/iv_device_repairs_imei"
                    app:layout_constraintTop_toBottomOf="@id/tv_device_repairs_device_name"
                    tools:text="IMEI：234234324324234234" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_device_repairs_shop"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_order_list_shop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_device_repairs_shop" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_device_repairs_shop"
                    style="@style/Font_14_black65"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:text="@{item.shopPositionName}"
                    app:layout_constraintStart_toEndOf="@id/iv_device_repairs_shop"
                    app:layout_constraintTop_toBottomOf="@id/tv_device_repairs_imei"
                    tools:text="浙大紫金港校区3区4号店铺-点位名称" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_device_repairs_date"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_order_list_time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_device_repairs_date" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_device_repairs_date"
                    style="@style/Font_14_black65"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:text='@{@string/apply_time + "：" + item.createTime}'
                    app:layout_constraintStart_toEndOf="@id/iv_device_repairs_date"
                    app:layout_constraintTop_toBottomOf="@id/tv_device_repairs_shop"
                    tools:text="申请时间：2023-03-07 12:22" />

                <com.lsy.framelib.ui.weight.SingleTapTextView
                    android:id="@+id/btn_device_repairs_device_detail"
                    style="@style/Font_14_f0a258"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:paddingVertical="12dp"
                    android:text="@string/device_detail"
                    app:layout_constraintTop_toBottomOf="@id/tv_device_repairs_date" />

                <View
                    style="@style/DividingStyle"
                    app:layout_constraintTop_toTopOf="@id/btn_device_repairs_device_detail"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>
</layout>