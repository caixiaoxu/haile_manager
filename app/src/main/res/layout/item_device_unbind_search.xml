<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.yunshang.haile_manager_android.data.entities.DeviceUnbindApproveEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_stroke_dividing_mlr16"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_device_unbind_search_device_name"
            style="@style/font_17_black85_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{item.goodsName}"
            app:layout_constraintEnd_toStartOf="@id/tv_device_unbind_search_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1号洗衣房01号洗衣机" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_device_unbind_search_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.statusVal}"
            style="@style/Font_14_black85"
            app:layout_constraintBottom_toBottomOf="@id/tv_device_unbind_search_device_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_device_unbind_search_device_name"
            tools:text="批准" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_device_unbind_search_imei_title"
            style="@style/Font_14_black45"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text='@{"IMEI："}'
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_device_repairs_imei"
            tools:text="IMEI：" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_device_repairs_imei"
            style="@style/Font_14_black45"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{item.imei}"
            app:layout_constraintStart_toEndOf="@id/tv_device_unbind_search_imei_title"
            app:layout_constraintTop_toBottomOf="@id/tv_device_unbind_search_device_name"
            tools:text="123213123213213" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_device_unbind_search_shop_title"
            style="@style/Font_14_black45"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text='@{@string/shop_info + "："}'
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_device_repairs_shop"
            tools:text="门店信息：" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_device_repairs_shop"
            style="@style/Font_14_black45"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{item.shopName}"
            app:layout_constraintStart_toEndOf="@id/tv_device_unbind_search_shop_title"
            app:layout_constraintTop_toBottomOf="@id/tv_device_repairs_imei"
            tools:text="浙大紫金港校区3区4号店铺" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_device_unbind_search_position_title"
            style="@style/Font_14_black45"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text='@{@string/pt + "："}'
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_device_unbind_search_position"
            tools:text="营业点：" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_device_unbind_search_position"
            style="@style/Font_14_black45"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{item.positionName}"
            app:layout_constraintStart_toEndOf="@id/tv_device_unbind_search_position_title"
            app:layout_constraintTop_toBottomOf="@id/tv_device_repairs_shop"
            tools:text="点位名称" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_device_unbind_search_date_title"
            style="@style/Font_14_black45"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text='@{@string/apply_time + "："}'
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_device_repairs_date"
            tools:text="申请时间：" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_device_repairs_date"
            style="@style/Font_14_black45"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text='@{item.createTime}'
            app:layout_constraintStart_toEndOf="@id/tv_device_unbind_search_date_title"
            app:layout_constraintTop_toBottomOf="@id/tv_device_unbind_search_position"
            tools:text="2023-03-07 12:22" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>