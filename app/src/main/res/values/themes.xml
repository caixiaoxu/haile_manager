<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Business_Android" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/page_bg</item>
    </style>

    <style name="CommonMatchBtnStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_btn_h</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommonMatchBtnStyle1" parent="CommonMatchBtnStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_solid_f0a258_radius_22</item>
    </style>

    <style name="CommonMatchBtnStyle2" parent="CommonMatchBtnStyle">
        <item name="android:textColor">@color/common_txt_color</item>
        <item name="android:background">@drawable/shape_stroke_333333_radius_22</item>
    </style>

    <style name="LoginItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_input_h</item>
        <item name="android:layout_marginTop">@dimen/login_input_mt</item>
        <item name="android:background">@drawable/shape_bottom_stroke_e3e3e3</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LoginInputItem" parent="LoginItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/common_txt_color</item>
        <item name="android:textColorHint">@color/common_txt_hint_color</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MainTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Common_Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/common_txt_color</item>
    </style>

    <style name="Font_12_333333">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/common_txt_color</item>
    </style>
    <style name="Font_12_CCCCCC">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/common_txt_hint_color</item>
    </style>

    <style name="Font_14_333333">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/common_txt_color</item>
    </style>

    <style name="Font_14_666666">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="input_14_333333_cccccc">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/common_txt_color</item>
        <item name="android:textColorHint">@color/common_txt_hint_color</item>
    </style>

    <style name="input_14_999999">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
    </style>
</resources>